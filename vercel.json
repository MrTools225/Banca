{
    "version": 2,
    "builds": [
        { "src": "api/index.php", "use": "@vercel/php" },
        { "src": "admin/**/*.php", "use": "@vercel/php" },
        { "src": "auth/**/*.php", "use": "@vercel/php" }
    ],
    "routes": [
        { "src": "/(.*\\.php)$", "dest": "/$1" },
        { "src": "/(.*)", "dest": "/index.php" }
    ]

}
